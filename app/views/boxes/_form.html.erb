<%= form_with(model: [@room, box], local: true, class: "row g-3") do |form| %>
  <% if box.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(box.errors.count, "erreur") %> :</h4>
      <ul class="mb-0">
        <% box.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= form.label :number, "Numéro du carton", class: "form-label" %>
    <%= form.text_field :number, class: "form-control", placeholder: "ex: 1, 2, A1, B2..." %>
  </div>

  <div class="col-md-6">
    <%= form.label :destination_room, "Pièce de destination", class: "form-label" %>
    <%= form.text_field :destination_room, class: "form-control", placeholder: "ex: Salon, Chambre..." %>
  </div>


  <div class="col-md-6">
    <div class="form-check mt-4">
      <%= form.check_box :fragile, class: "form-check-input", id: "box_fragile" %>
      <%= form.label :fragile, "Fragile", class: "form-check-label", for: "box_fragile" %>
    </div>
  </div>

  <div class="col-12">
    <%= form.label :description, "Description du contenu", class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Description du contenu du carton..." %>
  </div>

  <div class="col-12">
    <%= form.submit "Enregistrer", class: "btn btn-success" %>
    <%= link_to "Annuler", @room, class: "btn btn-secondary" %>
  </div>
<% end %>
